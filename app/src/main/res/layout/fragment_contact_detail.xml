<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="simplessa.labocontacts.RandomContactFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lastname"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="25dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname"
        android:layout_toRightOf="@+id/phoneText"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:text=""
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneText"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="25dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/emailText"
        android:layout_below="@+id/phoneText"
        android:layout_alignLeft="@+id/phone"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:text=""
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/companyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailText"
        android:layout_alignParentLeft="true"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="25dp"
        />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone"
        android:layout_below="@+id/emailText"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/text_margin"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyText"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/messageButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message_black_24dp"
            android:background="#00000000"
            android:tint="@color/colorPrimary"
            android:onClick="onMessageButtonClicked"/>

        <ImageButton
            android:id="@+id/phoneButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp"
            android:background="#00000000"
            android:tint="@color/colorPrimary"
            android:onClick="onPhoneButtonClicked"/>

        <ImageButton
            android:id="@+id/emailButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail_outline_black_24dp"
            android:background="#00000000"
            android:tint="@color/colorPrimary"
            android:onClick="onEmailButtonClicked"/>


    </LinearLayout>

</RelativeLayout>